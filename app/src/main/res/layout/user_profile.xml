<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".LinearLayout"
    android:weightSum="1"
    tools:targetApi="11">




    <ImageView
        android:id="@+id/imageOfUser"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/userName"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10px"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:paddingTop="20px"
            android:text="Name"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/nameContent"
            android:text="TestName"
            android:textSize="20dp"
            android:paddingLeft="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="40px"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/bioContent"
            android:text="TestBio"
            android:paddingLeft="70px"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="40px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/webContent"
            android:text="TestWebsite"
            android:paddingLeft="8px"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
            android:paddingTop="40px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count"
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20px">
            <TextView
                android:id="@+id/mediaContent"
                android:text="Media"
                android:paddingLeft="15px"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="40px"
                android:paddingTop="40px"
                />
            <TextView
                android:id="@+id/followsContent"
                android:text="Follows"
                android:paddingLeft="25px"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="40px"
                android:paddingTop="40px"
                />
            <TextView
                android:id="@+id/followedByContent"
                android:text="FollowedBy"
                android:paddingLeft="32px"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:layout_marginLeft="40px"
                android:paddingTop="40px"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>